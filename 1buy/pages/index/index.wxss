.banner-swipe-box{
  
}
.banner-swipe-item{
  width:100%;
}
.banner-swipe-item image{
  display: block;
  width: 100%;
}

/** nav bar */
.nav-bar-box{
  padding: 40rpx 20rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  background: #fff;
  margin-bottom:20rpx;
}
.nav-bar-box .nav-bar-item{
  width: 120rpx;
  position: relative;
  text-align: center;
  padding: 6rpx 0;
}
.nav-bar-item .bar-item-icon{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.nav-bar-item .bar-item-title{
  display: block;
  text-align: center;
  font-size:26rpx;
  color: #555;
}
.nav-bar-item .tip-dot{
  display: block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 16rpx;
  background: red;
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  z-index: 1;
}



/** 爆款商品 */
.explosion-box{
  width: 100%;
}
.explosion-box .explosion-box-title{
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: none;
}
.explosion-box .explosion-item{
  width: 95%;
  margin: 0 auto 20rpx;
  /*box-shadow: rgba(0,0,0,.4) 12rpx 12rpx 24rpx;*/
  /*border-radius: 10rpx;*/
  position: relative;
  background: #fff;
}
.explosion-item .item-cover{
  padding: 20rpx;
  height: 360rpx;
  text-align: center;
  overflow:hidden;
  /*border-radius: 10rpx;*/
}
.item-cover image{
  display: inline-block;
  height: 360rpx;
  width: 100%;
}
.item-desc{
  display: block;
  padding: 20rpx;
}
.item-desc text{
  display: block;
  font-size: 28rpx;
  color: #353535;
  line-height: 38rpx;
  width: 100%;
  height: 76rpx;
  overflow: hidden;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.item-price{
  padding: 0 20rpx;
  margin-bottom:20rpx;
  font-size: 36rpx;
}
.price-numb{
  color: red;
}
.item-progress{
  padding: 0 20rpx;
  margin-bottom:40rpx;
}
.item-joins{
  padding: 0 20rpx;
  padding-bottom:40rpx;
  font-size: 24rpx;
}
.item-joins .needs{
  margin-right: 40rpx;
}
.item-status{
  display: block;
  position: absolute;
  z-index: 1;
  width: 160rpx;
  height: 160rpx;
  border-radius: 200rpx;
  background: rgba(0,0,0,.5);
  line-height: 160rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  /*transform: rotate(45deg);*/
  top:10rpx;
  right:10rpx;
  font-weight:bold;
}
.over-cover{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.2);
}
.item-ready{
  background: rgba(9,187,7,.8);
}
.item-soon{
  background: rgba(234,50,50,.8);
}
.item-finish{
  background: rgba(50,178,234,1);
}

.join-btn{
  padding: 20rpx 40rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background: #09bb07;
  width: 60rpx;
  position: absolute;
  bottom: 24rpx;
  right: 20rpx;
}